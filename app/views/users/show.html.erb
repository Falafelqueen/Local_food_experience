<div class="container">
  <div class="user-info-header">
    <%# <%= @user.id %>
    <%# <%= @user.created_at %>
  </div>
  <div class="user-details">
    <div class="user-info">
          <h1><%= @user.name %></h1>
          <div class="user-info-element">
          <strong>Phone:</strong> <%= @user.phone_number %>
          </div>
          <div class="user-info-element">
          <strong>Bio:</strong>
          <%= @user.bio %>
          </div>
    </div>
    <div class="user-image">
      <% if @user.photo.attachment.nil? %>
        <%= image_tag "https://sdchefs.org/wp-content/uploads/2016/07/chef-placeholder.png" %>
      <% else %>
        <%= cl_image_tag @user.photo.key %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h2>My experiences</h2>
  <div class="card-holder">
    <% @user.experiences.sample(3).each do |experience| %>
      <% if experience.photo.attachment.nil? %>
        <% link_to experience_path(experience) do %>
          <div class="card">
            <div class="card-image" style="background-image: url(<%= cl_image_path experience.photo.key%>)">
          </div>
          <div class="card-info">
            <h2><%= experience.name %></h2>
            <% unless @user.photo.attachment.nil? %>
              <%= cl_image_tag experience.user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
