<div class="container">
  <h2>New booking</h2>
  <%= link_to experience_path(@experience) do %>
  <h4><%= @experience.name %></h4>
  <% end %>
  <p>from:
  <%= link_to user_path(@experience.user_id)do %>
  <%= @experience.user["name"] %>
  <% end %></p>
  <p>Price per day: <%= @experience.price_per_hour %></p>

  <%= simple_form_for [@experience, @booking] do |f| %>
  <div class="form">
    <div class="form-info">
        <%= f.input :start_date, as: :date %>
    </div>
    <div class="form-info">
        <%= f.input :end_date, as: :date %>
    </div>
    <%= f.button :submit , class:"primary-button" %>
  <% end %>
  </div>
</div>

<%= link_to "Back", experiences_path %>
