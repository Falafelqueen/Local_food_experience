
<div class="container section-bottom">
  <small>New booking</small>

  <div class="d-flex">
    <div class="w-50">
      <div class="d-flex justify-content-between align-items-center align-content-center">
        <h1><%= link_to @experience.name, experience_path(@experience) %></h1>
        <div class="d-flex">
        <p>with <%= @experience.user["name"] %> <%= cl_image_tag @experience.user.photo.key, class: "avatar-large" %></p>
        </div>
      </div>

      <div class="d-flex justify-content-between">
        <div class="d-flex flex-column">
          <h2 id="price"><%= @experience.price_per_hour %>â‚¬</h2>
          <p>per day</p>
        </div>
        <div class="d-flex flex-column">
        <h2><div id="price-preview"></div></h2>
        <p>total price</p>
        </div>
      </div>

      <%= simple_form_for [@experience, @booking] do |f| %>
      <div class="form">
        <div class="form-info">
            <%= f.input :start_date, as: :string , input_html: {class: "datepicker"}%>
        </div>
        <div class="form-info">
            <%= f.input :end_date, as: :string ,input_html: {class: "datepicker"}%>
        </div>
        <%= f.button :submit, "Book now", class:"primary-button" %>
      <% end %>
      </div>
    </div>
    <div class="w-50">
      <%= cl_image_tag @experience.photo.key, crop: :fill, width:800, class: "img-booking" %>
    </div>
  </div>
  <%= link_to "< Back", experiences_path %>
</div>
